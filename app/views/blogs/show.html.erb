<div class="container d-flex align-items-center justify-content-center mt-4">
  <div class="col-md-8">
    <p style="color: green"><%= notice %></p>

    <%= render @blog %>

    <div class = "d-inline-flex mt-3">
    <%= link_to "Edit this blog", edit_blog_path(@blog), class: 'btn btn-warning',  style: 'margin-right: 10px; margin-left:10px;' %>    |
    <%= link_to "Back to Blogs", blogs_path, class: 'btn btn-secondary', style: 'margin-right: 10px; margin-left:10px;' %>     |
    <%= button_to "Destroy this blog", @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', style: 'margin-right: 10px; margin-left:10px;' %>
  </div>
  
  </div>
</div>
